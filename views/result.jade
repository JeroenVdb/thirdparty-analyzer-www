html
  head
    title!= title
    link(href='/css/main.css', rel='stylesheet')
  body
    h1!= message
    for provider in result
        ul
            li #{provider.name}
                ul
                    li requests: #{provider.totals.requests}
                        br
                        a.fjs-show-requests(href='#') show/hide requests
                        ul.hidden.fjs-requests
                            for entry in provider.entries
                                li #{entry.request.url}
                    li timings: #{provider.totals.timings}
                    li size: #{provider.totals.content.size}

    script(src='/js/main.js')
